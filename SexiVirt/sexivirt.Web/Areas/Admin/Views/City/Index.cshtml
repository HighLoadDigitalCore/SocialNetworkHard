@model PagedList.IPagedList<City>

@{
    ViewBag.Title = "Города";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>
    Города
</h2>
@Html.ActionLink("Добавить", "Create", "City", null, new { @class = "btn btn-primary" })
<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Наименование
            </th>
            <th>
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", "City", new { id = item.ID }, new { @class = "btn  btn-default" })
                @Html.ActionLink("Удалить", "Delete", "City", new { id = item.ID }, new { @class = "btn  btn-danger" })
            </td>
        </tr>
    }
</table>
<div class="pager">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

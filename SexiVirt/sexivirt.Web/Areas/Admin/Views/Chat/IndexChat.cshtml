@model IList<Connect>
<link rel="stylesheet" href="~/Content/css/jquery.mCustomScrollbar.css" type="text/css" />
@Scripts.Render("~/Scripts/jquery.jscroll.js")
@Scripts.Render("/Scripts/admin/message.js")
@Scripts.Render("~/Scripts/jquery.mCustomScrollbar.js")
<input type="hidden" id="FromUserID" value="@ViewBag.ChatUserID"/>
<div class="middle">
    <div class="content">
        <section class="messages clear">
            <h2>Сообщения</h2>
            @*
            <div class="c_search">
                <input class="inputSearch" type="text" id="MessageSearch" placeholder="Начните вводить имя, логин или e-mail">
                <button class="searchBut"></button>
            </div>

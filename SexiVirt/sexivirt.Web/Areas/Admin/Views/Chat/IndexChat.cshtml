            <div style="width: 100%; clear: both; overflow: hidden">
                <div id="ConnectsWrapper" style="float: left">
                    @foreach (var item in Model)
                    {
                        @Html.Partial("ConnectItem", item)
                    }
                    @if (Model.Count == 10)
                    {
                        <a class="next" href="@Url.Action("LoadConversations", "Chat", new { skip = 10, ChatUserID = ViewBag.ChatUserID })">Загружаю</a>
                    }
                </div>
                <div id="ChatWrapper" style="float: left; min-height: 400px"></div>
            </div>
        </section>
    </div>
</div>
